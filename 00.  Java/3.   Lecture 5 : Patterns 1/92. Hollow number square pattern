import java.util.Scanner;
public class Solution {
    public static void main(String[] args) 
    {Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        int curnum=1;
        for(int i=0;i<=n-1;i++){
            for(int j=0;j<=n-1;j++){
                if(i==0 || i==n-1){
                    System.out.print(curnum);
                    curnum=curnum+1;
                }else{
                    if(j==0 || j==n-1){
                        System.out.print(curnum);
                        curnum=curnum+1;}
                        else{
                    System.out.print(" ");}}
                        
               
                //curnum=1;
                

            
        }
        curnum=1;
         System.out.println(" ");
    }
      
      // write your code here !!



    }
}
