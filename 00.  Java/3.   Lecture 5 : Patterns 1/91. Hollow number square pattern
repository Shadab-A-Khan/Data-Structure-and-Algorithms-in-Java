
import java.util.Scanner;
public class Solution {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int N = sc.nextInt();
        int num = 1;
        for (int i = 0; i < N; i++) {
            for (int j = 0; j < N; j++) {
                if(i==0 || i==N-1){
                    System.out.print(num);
                    num++;
                }else{
                    if(j==0 || j==N-1){
                        System.out.print(num);
                        num++;
                    }else{
                         System.out.print(" ");
                    }
                }
            }
            num=1;
            System.out.println();
        }
    }
}
