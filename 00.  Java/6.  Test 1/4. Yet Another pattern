import java.util.Scanner;
public class Solution {

	public static void main(String[] args) 	{
		Scanner sc=new Scanner (System.in);

		int n1=sc.nextInt();
		for(int k=0; k<n1;k++){
			int n=sc.nextInt();
		for(int i=0; i<n; i++){
			for(int s=0; s<i ; s++){
				System.out.print(" ");
			}
			for(int j=0; j<n-i; j++){
				System.out.print("*");
			}
			System.out.println();
		}
		}   	 
	}
}
